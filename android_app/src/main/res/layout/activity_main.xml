<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_dark"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="28dp">

        <!-- App Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="ðŸ“¡"
            android:textSize="48sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Accelerometer Streamer"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:text="Stream sensor data over TCP"
            android:textColor="@color/text_secondary"
            android:textSize="14sp" />

        <!-- Connection Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_background"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:text="Connection"
                android:textColor="@color/accent"
                android:textSize="13sp"
                android:textStyle="bold"
                android:letterSpacing="0.1" />

            <EditText
                android:id="@+id/etIpAddress"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/input_background"
                android:hint="Host IP Address"
                android:inputType="textUri"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="192.168.1.100"
                android:textColor="@color/white"
                android:textColorHint="@color/text_hint"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/etPort"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/input_background"
                android:hint="Port"
                android:inputType="number"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="5000"
                android:textColor="@color/white"
                android:textColorHint="@color/text_hint"
                android:textSize="15sp" />

        </LinearLayout>

        <!-- Buttons -->
        <Button
            android:id="@+id/btnConnect"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_accent"
            android:text="Connect"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnToggleStream"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/btn_secondary"
            android:enabled="false"
            android:text="Start Streaming"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textAllCaps="false" />

        <!-- Status Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/card_background"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="STATUS"
                android:textColor="@color/text_hint"
                android:textSize="11sp"
                android:textStyle="bold"
                android:letterSpacing="0.15" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disconnected"
                android:textColor="@color/status_disconnected"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>